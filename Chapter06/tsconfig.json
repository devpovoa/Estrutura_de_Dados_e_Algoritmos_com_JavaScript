{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "types": ["node", "jest"],
    "outDir": "./dist",
    "sourceMap": false,
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "/util": ["utils/util.ts"],
      "/models": ["models/*"],
      "/services": ["services/*"]
    }
  },
  "include": ["src", "tests/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
